                </div>
                <!-- main nav -->
                <div class="header-nav navbar-collapse collapse justify-content-end" id="navbarNavDropdown" style="margin-right: 422px;">
                    <div class="logo-header d-md-block d-lg-none">
                        <a href="@Url.Action("Index", "Home")"> <img src="~/Content/images/logo.png" alt=""></a>
