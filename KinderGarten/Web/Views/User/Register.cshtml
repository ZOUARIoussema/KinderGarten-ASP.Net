                        <li>
                            <a href="event.html">Events</a>
                        </li>
                        <li class="has-mega-menu">
                            <a href="services-1.html">Services</a>

                        </li>
                        <li>
                            <a href="blog-half-img.html">Blog</a>
                        </li>

                        <li>
                            <a href="contact-3.html">Contact Us</a>

                        </li>
                        <style>
                            .username {
                                border-radius: 0;
                                color: #fff;
                                font-size: 15px;
                                padding: 24px 10px 24px 10px;
                                font-weight: 600;
                                display: inline-block;
                                position: absolute;
                                border-width: 0 0 0 1px;
                                right: 26px;
                                text-transform: uppercase;
                            }
                        </style>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="has-mega-menu">
                                <p class="username">Welcome @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</p>



                                @*<a href="#" style="position: absolute;right: 9px;"></a>*@
                                <!--<i class="fa fa-sign-out fa-lg"></i>-->
